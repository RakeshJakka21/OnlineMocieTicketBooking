
@model MovieBooking.Web.Controllers.MovieDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="bg-white p-4 rounded shadow">
  <h2>Create Movie</h2>
  <form asp-action="Create" method="post" class="space-y-3">
    <div class="mb-2">
      <label class="form-label">Title</label>
      <input class="form-control" asp-for="Title" />
    </div>
    <div class="mb-2">
      <label class="form-label">Description</label>
      <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <div class="mb-2">
      <label class="form-label">DurationMinutes</label>
      <input class="form-control" asp-for="DurationMinutes" type="number" />
    </div>
    <div class="mb-2">
      <label class="form-label">Rating</label>
      <input class="form-control" asp-for="Rating" type="number" step="0.1" />
    </div>
    <div class="mb-2">
      <label class="form-label">PosterPath</label>
      <input class="form-control" asp-for="PosterPath" value="/images/posters/inception.png" />
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
  </form>
</div>
